{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "dist/**/*.ts",
    "src/**/*.{ts,js}",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
